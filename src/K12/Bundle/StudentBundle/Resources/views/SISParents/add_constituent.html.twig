{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}

<div class="group-box">
<div class="group-box-header">Add Constituent</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'Core.Constituent.LastName', table_row: false, label: true }) }}
{{ kula_field({ add: true, field: 'Core.Constituent.FirstName', table_row: false, label: true }) }}
{{ kula_field({ add: true, field: 'Core.Constituent.MiddleName', table_row: false, label: true }) }}
</div>
</div>

<div class="group-box">
<div class="group-box-header">Birth Info</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'Core.Constituent.Gender', table_row: false, label: true }) }}
{{ kula_field({ add: true, field: 'Core.Constituent.BirthDate', table_row: false, label: true }) }}
</div>
</div>

<div class="group-box">
<div class="group-box-header">Relationship</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, table_row: false, add_remove: true, field: 'Core.Constituent.Relationship.Relationship', db_row_id: kula_core_record.getSelectedRecord.STUDENT_ID, label: true }) }}
</div>
</div>

{% endblock %}
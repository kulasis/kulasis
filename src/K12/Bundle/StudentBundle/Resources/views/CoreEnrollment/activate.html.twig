{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="group-box">
<div class="group-box-header">Status</div>
<div class="group-box-contents group">
{{ kula_field({ field: 'Core.Term.Abbreviation', field_name_override: 'Term', value: status.TERM_ABBREVIATION, label: true }) }}
{{ kula_field({ field: 'Core.Organization.Name', value: status.ORGANIZATION_NAME, label: true }) }}
{{ kula_field({ field: 'K12.Student.Status.Grade', value: status.GRADE, label: true }) }}
{{ kula_field({ field: 'K12.Student.Status.Age', value: status.AGE, label: true }) }}
{{ kula_field({ field: 'K12.Student.Status.Resident', value: status.RESIDENT, label: true }) }}
{{ kula_field({ field: 'K12.Student.Status.FTE', value: status.FTE, label: true }) }}
</div>
</div>

<div class="group-box">
<div class="group-box-header">Activate Student</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, table_row: false, field: 'K12.Student.Status.Grade', table_row: false, label: true }) }}
{{ kula_field({ add: true, table_row: false, field: 'K12.Student.Status.Resident', table_row: false, label: true }) }}
{{ kula_field({ add: true, table_row: false, field: 'K12.Student.Status.FTE', table_row: false, label: true }) }}
{{ kula_field({ add: true, table_row: false, field: 'K12.Student.Status.ThesisStatus', table_row: false, label: true }) }}
{{ kula_field({ add: true, table_row: false, field: 'K12.Student.Status.EnterDate', table_row: false, label: true }) }}
{{ kula_field({ add: true, table_row: false, field: 'K12.Student.Status.EnterCode', table_row: false, label: true }) }}
</div>
</div>

{% endblock %}
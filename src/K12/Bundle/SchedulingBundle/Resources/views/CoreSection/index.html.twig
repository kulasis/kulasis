{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}

<div class="group">
<div class="group-box" style="float:left;width:49%;">
<div class="group-box-header">Section</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'K12.Section.StartDate', db_row_id: kula_core_record.getSelectedRecord.SECTION_ID, value: section.START_DATE, label: true }) }}
{{ kula_field({ edit: true, field: 'K12.Section.EndDate', db_row_id: kula_core_record.getSelectedRecord.SECTION_ID, value: section.END_DATE, label: true }) }}
{{ kula_field({ edit: true, field: 'K12.Section.Credits', db_row_id: kula_core_record.getSelectedRecord.SECTION_ID, value: section.CREDITS, label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'K12.Section.NoClassDates', db_row_id: kula_core_record.getSelectedRecord.SECTION_ID, value: section.NO_CLASS_DATES, label: true }) }}
</div>
</div>

<div class="group-box" style="float:right;width:49%;">
<div class="group-box-header">Seats</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'K12.Section.Capacity', db_row_id: kula_core_record.getSelectedRecord.SECTION_ID, value: section.CAPACITY, label: true }) }}
{{ kula_field({ edit: true, field: 'K12.Section.Minimum', db_row_id: kula_core_record.getSelectedRecord.SECTION_ID, value: section.MINIMUM, label: true }) }}

    {{ kula_field({ edit: true, field: 'K12.Section.Meeting.Friday', db_row_id: meeting_time.SECTION_MEETING_ID, value: meeting_time.FRI, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true,field: 'K12.Section.Meeting.Saturday', db_row_id: meeting_time.SECTION_MEETING_ID, value: meeting_time.SAT, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.Section.Meeting.StartTime', db_row_id: meeting_time.SECTION_MEETING_ID, value: meeting_time.START_TIME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.Section.Meeting.EndTime', db_row_id: meeting_time.SECTION_MEETING_ID, value: meeting_time.END_TIME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.Section.Meeting.StartDate', db_row_id: meeting_time.SECTION_MEETING_ID, value: meeting_time.START_DATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.Section.Meeting.EndDate', db_row_id: meeting_time.SECTION_MEETING_ID, value: meeting_time.END_DATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.Section.Meeting.RoomID', db_row_id: meeting_time.SECTION_MEETING_ID, value: meeting_time.ROOM_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
<div class="group-box">
<div class="group-box-header">Supplies</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'K12.Section.SuppliesRequired', db_row_id: kula_core_record.getSelectedRecord.SECTION_ID, value: section.SUPPLIES_REQUIRED, label: true }) }}

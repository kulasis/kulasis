{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Courses
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_courses', 'STUD_SECTION_COURSES') }}
</span>
</div>
<table id="window_window_num_data_table_courses" class="data-table">
<thead>
  {{ kula_field_name({ delete: true, field: 'HEd.Section.Course.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'HEd.Section.Course.CourseID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'HEd.Section.Course.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, field: 'HEd.Section.Course.SectionID', value: kula_core_record.getSelectedRecord.SECTION_ID, hidden: true }) }}
  {{ kula_field({ add: true, delete: true, field: 'HEd.Section.Course.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Section.Course.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.Section.Course.CourseID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Section.Course.ID', prepend_html: '</tr>' }) }}
  {% for course in courses %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.Section.Course.ID', db_row_id: course.SECTION_COURSE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ field: 'HEd.Section.Course.COurseID', db_row_id: course.SECTION_COURSE_ID, value: course.COURSE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>

{% endblock %}
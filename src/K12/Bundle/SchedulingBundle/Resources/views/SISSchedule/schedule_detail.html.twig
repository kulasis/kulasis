{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block detail %}
<div class="group-box">
<div class="group-box-header">Registration</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'K12.Student.Class.Priority', db_row_id: class.STUDENT_CLASS_ID, value: class.PRIORITY, label: true }) }}
{{ kula_field({ edit: true, field: 'K12.Student.Class.RegistrationType', db_row_id: class.STUDENT_CLASS_ID, value: class.REGISTRATION_TYPE, label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Change Reason</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'K12.Student.Class.ChangeReason', db_row_id: class.STUDENT_CLASS_ID, value: class.CHANGE_REASON, label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'K12.Student.Class.ChangeNotes', db_row_id: class.STUDENT_CLASS_ID, value: class.CHANGE_NOTES, label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Additional Course</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'K12.Student.Class.CourseID', db_row_id: class.STUDENT_CLASS_ID, SECTION_ID: class.SECTION_ID, value: class.COURSE_ID, label: true }) }}
</div>
</div>
{% endblock %}
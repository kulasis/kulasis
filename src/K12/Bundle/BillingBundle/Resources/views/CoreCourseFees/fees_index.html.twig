{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Course Fee Charges
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_charge', 'BILL_COURSE_FEE', { school_term_only: true }) }}
</span>
</div>
<table id="window_window_num_data_table_charge" class="data-table">
<thead>
  {{ kula_field_name({ delete: true, school_term_only: true, field: 'K12.Billing.CourseFee.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ edit: true, field: 'K12.Billing.CourseFee.OrganizationTermID', field_name_override: 'Term / Organization', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'K12.Billing.CourseFee.CodeID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'K12.Billing.CourseFee.Amount', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
    {{ kula_display_html({ add: true, field: 'K12.Billing.CourseFee.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.OrganizationTermID', value: organization_term_id, hidden: true }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.CourseID', value: kula_core_record.getSelectedRecord.COURSE_ID, hidden: true }) }}
    {{ kula_field({ add: true, delete: true, field: 'K12.Billing.CourseFee.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    {{ kula_display_html({ add: true, field: 'K12.Billing.CourseFee.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.OrganizationTermID', value: organization_term_id_display, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.CodeID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.Amount', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_display_html({ add: true, field: 'K12.Billing.CourseFee.ID', prepend_html: '</tr>' }) }}
  {% for fee in fees %}
  <tr>
    {{ kula_field({ delete: true, school_term_only: true, field: 'K12.Billing.CourseFee.ID', db_row_id: fee.COURSE_FEE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {% set orgterm = fee.TERM_ABBREVIATION ~ ' / ' ~ fee.ORGANIZATION_NAME %}
    {{ kula_field({ field: 'K12.Billing.CourseFee.OrganizationTermID', school_term_only: true, db_row_id: fee.COURSE_FEE_ID, value: orgterm, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, school_term_only: true, field: 'K12.Billing.CourseFee.CodeID', db_row_id: fee.COURSE_FEE_ID, value: fee.CODE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, school_term_only: true, field: 'K12.Billing.CourseFee.Amount', db_row_id: fee.COURSE_FEE_ID, value: fee.AMOUNT, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>

<div class="data-table-header-div">
Course Fee Refunds
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_refund', 'BILL_COURSE_FEE', { school_term_only: true }) }}
</span>
</div>
<table id="window_window_num_data_table_refund" class="data-table">
<thead>
  {{ kula_field_name({ delete: true, school_term_only: true, field: 'K12.Billing.CourseFee.Refund.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ edit: true, field: 'K12.Billing.CourseFee.Refund.OrganizationTermID', field_name_override: 'Term / Organization', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'K12.Billing.CourseFee.Refund.EndDate', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'K12.Billing.CourseFee.Refund.CodeID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'K12.Billing.CourseFee.Refund.Amount', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
    {{ kula_display_html({ add: true, field: 'K12.Billing.CourseFee.Refund.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.Refund.OrganizationTermID', value: organization_term_id, hidden: true }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.Refund.CourseID', value: kula_core_record.getSelectedRecord.COURSE_ID, hidden: true }) }}
    {{ kula_field({ add: true, delete: true, field: 'K12.Billing.CourseFee.Refund.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    {{ kula_display_html({ add: true, field: 'K12.Billing.CourseFee.Refund.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.Refund.OrganizationTermID', value: organization_term_id_display, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.Refund.EndDate', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.Refund.CodeID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'K12.Billing.CourseFee.Refund.Amount', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_display_html({ add: true, field: 'K12.Billing.CourseFee.Refund.ID', prepend_html: '</tr>' }) }}
  {% for refund_fee in refund_fees %}
  <tr>
    {{ kula_field({ delete: true, school_term_only: true, field: 'K12.Billing.CourseFee.Refund.ID', db_row_id: refund_fee.COURSE_FEE_REFUND_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {% set orgterm = refund_fee.TERM_ABBREVIATION ~ ' / ' ~ refund_fee.ORGANIZATION_NAME %}
    {{ kula_field({ field: 'K12.Billing.CourseFee.Refund.OrganizationTermID', school_term_only: true, db_row_id: refund_fee.COURSE_FEE_REFUND_ID, value: orgterm, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, school_term_only: true, field: 'K12.Billing.CourseFee.Refund.EndDate', db_row_id: refund_fee.COURSE_FEE_REFUND_ID, value: refund_fee.END_DATE, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, school_term_only: true, field: 'K12.Billing.CourseFee.Refund.CodeID', db_row_id: refund_fee.COURSE_FEE_REFUND_ID, value: refund_fee.CODE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, school_term_only: true, field: 'K12.Billing.CourseFee.Refund.Amount', db_row_id: refund_fee.COURSE_FEE_REFUND_ID, value: refund_fee.AMOUNT, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
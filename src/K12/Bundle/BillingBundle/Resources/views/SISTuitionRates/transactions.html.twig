{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}
<p>
  <a class="normal-link" data-record-id="{{ kula_core_record.getSelectedRecordID() }}" data-record-type="{{ kula_core_record.getRecordType() }}" href="{{ path('sis_K12_setup_billing_tuitionrates') }}">Back to Tuition Rates</a>
</p>

<div class="data-table-header-div">
Transactions
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_chargecodes', 'BILL_TUITION_RATE_TRANSACTIONS') }}
</span>
</div>
<table id="window_window_num_data_table_chargecodes" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'K12.TuitionRate.Transaction.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'K12.TuitionRate.Transaction.Rule', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.Transaction.MinimumCredits', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.Transaction.TransactionCodeID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.Transaction.Amount', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'K12.TuitionRate.Transaction.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, delete: true, field: 'K12.TuitionRate.Transaction.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.Transaction.TuitionRateID', value: tuition_rate_id, hidden: true }) }}
  {{ kula_display_html({ add: true, field: 'K12.TuitionRate.Transaction.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.Transaction.Rule', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.Transaction.MinimumCredits', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.Transaction.TransactionCodeID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.Transaction.Amount', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'K12.TuitionRate.Transaction.ID', prepend_html: '</tr>' }) }}
  {% for transaction in transactions %}
  <tr>
    {{ kula_field({ delete: true, field: 'K12.TuitionRate.Transaction.ID', db_row_id: transaction.TUITION_RATE_TRANSACTION_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.Transaction.Rule', db_row_id: transaction.TUITION_RATE_TRANSACTION_ID, value: transaction.RULE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.Transaction.MinimumCredits', db_row_id: transaction.TUITION_RATE_TRANSACTION_ID, value: transaction.MIN_CREDITS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.Transaction.TransactionCodeID', db_row_id: transaction.TUITION_RATE_TRANSACTION_ID, value: transaction.TRANSACTION_CODE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.Transaction.Amount', db_row_id: transaction.TUITION_RATE_TRANSACTION_ID, value: transaction.AMOUNT, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Tuition Rates
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_chargecodes', 'BILL_TUITION_RATE') }}
</span>
</div>
<table id="window_window_num_data_table_chargecodes" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'K12.TuitionRate.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'K12.TuitionRate.Name', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.BillingMode', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.CourseFees', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.CreditHourRate', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.CreditHourAuditRate', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.FullTimeFlatRate', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.FullTimeCredits', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'K12.TuitionRate.MaxFullTimeCredits', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">Actions</th>
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'K12.TuitionRate.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, delete: true, field: 'K12.TuitionRate.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.OrganizationTermID', value: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, hidden: true }) }}
  {{ kula_display_html({ add: true, field: 'K12.TuitionRate.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.Name', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.BillingMode', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.CourseFees', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.CreditHourRate', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.CreditHourAuditRate', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.FullTimeFlatRate', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.FullTimeCredits', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'K12.TuitionRate.MaxFullTimeCredits', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_display_html({ add: true, field: 'K12.TuitionRate.ID', prepend_html: '<td class="data-table-cell-row-num">Actions</td>' }) }}
  {{ kula_display_html({ add: true, field: 'K12.TuitionRate.ID', prepend_html: '</tr>' }) }}
  {% for rate in rates %}
  <tr>
    {{ kula_field({ delete: true, field: 'K12.TuitionRate.ID', db_row_id: rate.TUITION_RATE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.Name', db_row_id: rate.TUITION_RATE_ID, value: rate.TUITION_RATE_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.BillingMode', db_row_id: rate.TUITION_RATE_ID, value: rate.BILLING_MODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.CourseFees', db_row_id: rate.TUITION_RATE_ID, value: rate.COURSE_FEES, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.CreditHourRate', db_row_id: rate.TUITION_RATE_ID, value: rate.CREDIT_HOUR_RATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.CreditHourAuditRate', db_row_id: rate.TUITION_RATE_ID, value: rate.CREDIT_HOUR_AUDIT_RATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.FullTimeFlatRate', db_row_id: rate.TUITION_RATE_ID, value: rate.FULL_TIME_FLAT_RATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.FullTimeCredits', db_row_id: rate.TUITION_RATE_ID, value: rate.FULL_TIME_CREDITS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'K12.TuitionRate.MaxFullTimeCredits', db_row_id: rate.TUITION_RATE_ID, value: rate.MAX_FULL_TIME_CREDITS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    <td>
      <a class="normal-link"  data-record-id="{{ kula_core_record.getSelectedRecordID() }}" data-record-type="{{ kula_core_record.getRecordType() }}" href="{{ path('sis_HEd_setup_billing_tuitionrates_students', { tuition_rate_id: rate.TUITION_RATE_ID }) }}">Students</a>
      <a class="normal-link"  data-record-id="{{ kula_core_record.getSelectedRecordID() }}" data-record-type="{{ kula_core_record.getRecordType() }}" href="{{ path('sis_HEd_setup_billing_tuitionrates_refunds', { tuition_rate_id: rate.TUITION_RATE_ID }) }}">Refunds</a>
      <a class="normal-link"  data-record-id="{{ kula_core_record.getSelectedRecordID() }}" data-record-type="{{ kula_core_record.getRecordType() }}" href="{{ path('sis_HEd_setup_billing_tuitionrates_transactions', { tuition_rate_id: rate.TUITION_RATE_ID }) }}">Transactions</a>
    </td>
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
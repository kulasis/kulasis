{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="group-box">
<div class="group-box-header">Student</div>
<div class="group-box-contents group">
{% if kula_core_record.getSelectedRecord.STUDENT_ID  %}
{{ kula_field({ field: 'K12.Billing.Transaction.ConstituentID', field_name_override: 'Student', value: kula_core_record.getSelectedRecord.STUDENT_STATUS_ID, label: true }) }}
{% else %}
{{ kula_field({add: true, field: 'K12.Billing.Transaction.ConstituentID', field_name_override: 'Student', label: true }) }}
{% endif %}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Term</div>
<div class="group-box-contents group">
{% if kula_core_record.getSelectedRecord.STUDENT_ID  %}
{{ kula_field({ add: true, field: 'K12.Billing.Transaction.OrganizationTermID', field_name_override: 'Org / Term', value: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, label: true }) }}
{% else %}
{{ kula_field({ add: true, field: 'K12.Billing.Transaction.OrganizationTermID', field_name_override: 'Org / Term', value: org_term, label: true }) }}
{% endif %}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Transaction</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'K12.Billing.Transaction.CodeID', field_name_override: 'Code', CODE_TYPE: code_type, label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'K12.Billing.Transaction.TransactionDate', value:"now"|date("m/d/Y"), label: true }) }}
{{ kula_field({ add: true, field: 'K12.Billing.Transaction.Description', label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'K12.Billing.Transaction.Amount', label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Class</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'K12.Billing.Transaction.StudentClassID', field_name_override: 'Section', STUDENT_ID: kula_core_record.getSelectedRecordID(), ORGANIZATION_TERM_ID: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, label: true }) }}
</div>
</div>
{% endblock %}
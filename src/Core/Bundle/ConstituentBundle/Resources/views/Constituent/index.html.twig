{{ kula_field({ edit: true, field: 'Core.Constituent.Gender', db_row_id: kula_core_record.getSelectedRecord.CONSTITUENT_ID, value: kula_core_record.getSelectedRecord.GENDER, label: true, lookup: 'C'  }) }}

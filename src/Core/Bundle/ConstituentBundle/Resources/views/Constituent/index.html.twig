{{ kula_field({ edit: true, field: 'Core.Constituent.MaidenName', db_row_id: kula_core_record.getSelectedRecord.CONSTITUENT_ID, value: kula_core_record.getSelectedRecord.MAIDEN_NAME, label: true  }) }}

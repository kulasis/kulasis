{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
{% if request.get('_route') == 'Core_Billing_ConstituentBilling_Payments_AddAppliedTransaction' %}
  {% set parent_route = 'Core_Billing_ConstituentBilling_PaymentDetail' %}
{% else %}
  {% set parent_route = 'Core_Billing_StudentBilling_PaymentDetail' %}
{% endif %}
<p>
<a class="normal-link"  data-record-id="{{ kula_core_record.getSelectedRecordID() }}" data-record-type="{{ kula_core_record.getRecordType() }}" href="{{ path(parent_route, { payment_id: payment_id }) }}">Back to Payment Detail</a>
</p>

<div class="group-box">
<div class="group-box-header">Charge</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'Core.Billing.Payment.Applied.TransactionID', CONSTITUENT_ID: kula_core_record.getSelectedRecord.STUDENT_ID, field_name_override: 'Charge', label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'Core.Billing.Payment.Applied.Amount', label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'Core.Billing.Payment.Applied.Note', label: true }) }}
</div>
</div>
{% endblock %}
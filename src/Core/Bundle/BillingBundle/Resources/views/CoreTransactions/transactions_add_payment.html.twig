{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<p>
<a class="normal-link"  data-record-id="{{ kula_core_record.getSelectedRecordID() }}" data-record-type="{{ kula_core_record.getRecordType() }}" href="{{ path('Core_Billing_ConstituentBilling_PaymentDetail', { payment_id: payment_id }) }}">Back to Payment Detail</a>
</p>

<div class="group-box">
<div class="group-box-header">Student</div>
<div class="group-box-contents group">
{{ kula_field({add: true, field: 'Core.Billing.Transaction.ConstituentID', field_name_override: 'Constituent', value: kula_core_record.getSelectedRecord.CONSTITUENT_ID, label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Term</div>
<div class="group-box-contents group">
{% if kula_core_record.getSelectedRecord.STUDENT_ID  %}
{{ kula_field({ add: true, field: 'Core.Billing.Transaction.OrganizationTermID', field_name_override: 'Org / Term', value: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, label: true }) }}
{% else %}
{{ kula_field({ add: true, field: 'Core.Billing.Transaction.OrganizationTermID', field_name_override: 'Org / Term', value: org_term, label: true }) }}
{% endif %}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Transaction</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'Core.Billing.Transaction.CodeID', field_name_override: 'Code', CODE_TYPE: code_type, label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'Core.Billing.Transaction.TransactionDate', value:"now"|date("m/d/Y"), label: true }) }}
{{ kula_field({ add: true, field: 'Core.Billing.Transaction.Description', label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, field: 'Core.Billing.Transaction.Amount', label: true }) }}
</div>
</div>
{% endblock %}
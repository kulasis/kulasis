{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<input type="hidden" name="record_id" value="{{ request.query.get('record_id') }}" />
<input type="hidden" name="record_type" value="{{ request.query.get('record_type') }}" />
<div class="group-box">
<div class="group-box-header">Billing Ledger</div>
<div class="group-box-contents group">
  Financial Aid Year:
  {{ form_select(fa_menu, 'fa_year') }}
</div>
<div class="group-box-contents group">
  Organization:
  <input type="checkbox" name="enforce_organization" value="Y" checked="checked" />
  {{ kula_field({ non: true, field: 'Core.Organization.Term.OrganizationID', value: focus.getOrganizationID, label: false}) }}
</div>
</div>
{% endblock %}
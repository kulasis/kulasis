{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}
{% block content %}
<div class="data-table-header-div">
Integration API Applications
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_tabs', 'CORE_INTG_API_APPS') }}
</span>
</div>
<table id="window_window_num_data_table_tabs" class="data-table">
<thead>
  {{ kula_field_name({ delete: true, field: 'Core.Integration.APIApplications.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ edit: true, field: 'Core.Integration.APIApplications.Application', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.Integration.APIApplications.Host', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.Integration.APIApplications.IPAddress', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.Integration.APIApplications.ApplicationID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.Integration.APIApplications.ApplicationSecret', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
    {{ kula_display_html({ add: true, field: 'Core.Integration.APIApplications.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
    {{ kula_field({ add: true, delete: true, field: 'Core.Integration.APIApplications.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    {{ kula_display_html({ add: true, field: 'Core.Integration.APIApplications.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
    {{ kula_field({ add: true, field: 'Core.Integration.APIApplications.Application', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.Integration.APIApplications.Host', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.Integration.APIApplications.IPAddress', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.Integration.APIApplications.ApplicationID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.Integration.APIApplications.ApplicationSecret', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_display_html({ add: true, field: 'Core.Integration.APIApplications.ID', prepend_html: '</tr>' }) }}
  {% for db in databases %}
  <tr>
    {{ kula_field({ delete: true, field: 'Core.Integration.APIApplications.ID', db_row_id: db.INTG_API_APP_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'Core.Integration.APIApplications.Application', db_row_id: db.INTG_API_APP_ID, value: db.APPLICATION, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.Integration.APIApplications.Host', db_row_id: db.INTG_API_APP_ID, value: db.HOST, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.Integration.APIApplications.IPAddress', db_row_id: db.INTG_API_APP_ID, value: db.IP_ADDRESS, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.Integration.APIApplications.ApplicationID', db_row_id: db.INTG_API_APP_ID, value: db.APP_ID, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.Integration.APIApplications.ApplicationSecret', db_row_id: db.INTG_API_APP_ID, value: db.APP_SECRET, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
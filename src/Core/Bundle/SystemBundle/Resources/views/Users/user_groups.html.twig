{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}

<div class="data-table-header-div">
User Groups
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_terms', 'CORE_USER_ROLES') }}
</span>
</div>
<table id="window_window_num_data_table_terms" class="data-table">
<thead>
  <tr>
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ delete: true, field: 'Core.User.Role.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.User.Role.UsergroupID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.User.Role.OrganizationID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.User.Role.TermID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.User.Role.Administrator', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.User.Role.DefaultRole', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'Core.User.Role.Active', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'Core.User.Role.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
    {{ kula_field({ add: true, delete: true, field: 'Core.User.Role.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    {{ kula_display_html({ add: true, field: 'Core.User.Role.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
    {{ kula_field({ add: true, field: 'Core.User.Role.UserID', value: kula_core_record.getSelectedRecord.USER_ID, hidden: true }) }}
    {{ kula_field({ add: true, field: 'Core.User.Role.UsergroupID', prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.User.Role.OrganizationID', prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.User.Role.TermID', prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.User.Role.Administrator', prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.User.Role.DefaultRole', prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'Core.User.Role.Active', prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'Core.User.Role.ID', prepend_html: '</tr>' }) }}
  {% for usergroup in usergroups %}
  <tr>
    {{ kula_field({ delete: true, field: 'Core.User.Role.ID', db_row_id: usergroup.ROLE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'Core.User.Role.UsergroupID', db_row_id: usergroup.ROLE_ID, value: usergroup.USERGROUP_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.User.Role.OrganizationID', db_row_id: usergroup.ROLE_ID, value: usergroup.ORGANIZATION_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.User.Role.TermID', db_row_id: usergroup.ROLE_ID, value: usergroup.TERM_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.User.Role.Administrator', db_row_id: usergroup.ROLE_ID, value: usergroup.ADMINISTRATOR, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.User.Role.DefaultRole', db_row_id: usergroup.ROLE_ID, value: usergroup.DEFAULT, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'Core.User.Role.Active', db_row_id: usergroup.ROLE_ID, value: usergroup.ACTIVE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>

{% endblock %}
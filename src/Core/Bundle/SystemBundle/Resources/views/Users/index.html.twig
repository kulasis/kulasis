{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="group-box">
<div class="group-box-header">User Info</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'Core.User.Username', db_row_id: kula_core_record.getSelectedRecord.USER_ID, value: kula_core_record.getSelectedRecord.USERNAME, label: true }) }}
</div>
</div>

<div class="group-box">
<div class="group-box-header">Authentication</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'Core.User.AllowAuthLocal', db_row_id: kula_core_record.getSelectedRecord.USER_ID, value: user.ALLOW_AUTH_LOCAL, label: true }) }}
{{ kula_field({ edit: true, field: 'Core.User.AllowAuthLDAP', db_row_id: kula_core_record.getSelectedRecord.USER_ID, value: user.ALLOW_AUTH_LDAP, label: true }) }}
{{ kula_field({ edit: true, field: 'Core.User.AllowAuthGoogle', db_row_id: kula_core_record.getSelectedRecord.USER_ID, value: user.ALLOW_AUTH_GOOGLE, label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Login Failures</div>
<div class="group-box-contents group">
{{ kula_field({ field: 'Core.User.NumberFailedAttempts', value: user.FAILED_ATTEMPTS, label: true }) }}
</div>
</div>

<div class="group-box">
<div class="group-box-header">Local Authentication</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'Core.User.Password', db_row_id: kula_core_record.getSelectedRecord.USER_ID, label: true, attributes_html: { 'size' : 40 } }) }}
{{ kula_field({ edit: true, field: 'Core.User.Password', db_row_id: kula_core_record.getSelectedRecord.USER_ID, label: true, field_name_override: 'Confirm Password', confirmation: true,  attributes_html: { 'size' : 40 } }) }}
</div>
</div>

<div class="group-box">
<div class="group-box-header">LDAP Authentication</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'Core.User.LDAPID', db_row_id: kula_core_record.getSelectedRecord.USER_ID, value: user.LDAP_ID, label: true }) }}
</div>
</div>

{% endblock %}
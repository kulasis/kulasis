{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="group-box">
<div class="group-box-header">Search Constituents</div>
<div class="group-box-contents group">
{{ kula_field({ search: true, field: 'Constituent.Constituent.LastName', label: true }) }}
{{ kula_field({ search: true, field: 'Constituent.Constituent.FirstName', label: true }) }}
{{ kula_field({ search: true, field: 'Constituent.Constituent.MiddleName', label: true }) }}
</div>
</div>

{% if request.request.has('search') %}
<div class="group-box-contents group">
  <a href="{{ path('core_system_users_add_constituent') }}" class="normal-link">Add Constituent</a>
</div>
{% endif %}

{% if constituents %}
<div class="group-box">
<div class="group-box-header">Add User</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, table_row: false, field: 'Core.User.Username', db_row_id: kula_core_record.getSelectedRecord.USER_ID, label: true }) }}
{{ kula_field({ add: true, table_row: false, field: 'Core.User.Password', db_row_id: kula_core_record.getSelectedRecord.USER_ID, label: true }) }}
{{ kula_field({ add: true, table_row: false, field: 'Core.User.Password', db_row_id: kula_core_record.getSelectedRecord.USER_ID, label: true, confirmation: true }) }}
</div>
</div>
{% endif %}

<div class="data-table-header-div">
Search Results
</div>
<table id="window_window_num_data_table_terms" class="data-table">
<thead>
  {{ kula_field_name({ add: true, field: 'Constituent.Constituent.ID', field_name_override: '&nbsp;', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ search: true, field: 'Constituent.Constituent.LastName', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ search: true, field: 'Constituent.Constituent.FirstName', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ search: true, field: 'Constituent.Constituent.MiddleName', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
  {% for constituent in constituents %}
  <tr>
		{% if constituent.USER_ID %}
		  <td class="data-table-cell-row-delete">X</td>
		{% else %}
      {{ kula_field({ add: true, table_row: false, field: 'Core.User.ID', value: constituent.CONSTITUENT_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    {% endif %}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ input: false, field: 'Constituent.Constituent.LastName', db_row_id: constituent.CONSTITUENT_ID, value: constituent.LAST_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ input: false, field: 'Constituent.Constituent.FirstName', db_row_id: constituent.CONSTITUENT_ID, value: constituent.FIRST_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ input: false, field: 'Constituent.Constituent.MiddleName', db_row_id: constituent.CONSTITUENT_ID, value: constituent.MIDDLE_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>

{% endblock %}
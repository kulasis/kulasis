{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Organization Terms
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_orgterms', 'CORE_ORGANIZATION_TERMS') }}
</span>
</div>
<table id="window_window_num_data_table_orgterms" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'Core.Organization.Terms.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ edit: true, field: 'Core.Organization.Terms.TermID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'Core.Organization.Terms.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, delete: true, field: 'Core.Organization.Terms.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_field({ add: true, field: 'Core.Organization.Terms.OrganizationID', value: kula_core_record.getSelectedRecord.ORGANIZATION_ID, hidden: true }) }}
  {{ kula_display_html({ add: true, field: 'Core.Organization.Terms.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'Core.Organization.Terms.TermID', prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'Core.Organization.Terms.ID', prepend_html: '</tr>' }) }}
  {% for orgterm in orgterms %}
  <tr>
    {{ kula_field({ delete: true, field: 'Core.Organization.Terms.ID', db_row_id: orgterm.ORGANIZATION_TERM_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'Core.Organization.Terms.TermID', db_row_id: orgterm.ORGANIZATION_TERM_ID, value: orgterm.TERM_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>

{% endblock %}
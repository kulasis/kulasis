{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <span>
            <img width="13" height="28" alt="Database" src="data:image/png;base64," />
            <span class="sf-toolbar-status{% if 50 < collector.getQueryCount() %} sf-toolbar-status-yellow{% endif %}">{{ collector.getQueryCount() }}</span>
            {% if collector.getQueryCount() > 0 %}
                <span class="sf-toolbar-info-piece-additional-detail">in {{ '%0.2f'|format(collector.getTotalQueryTime() * 1000) }} ms</span>
            {% endif %}
        </span>
    {% endset %}
    {% set text %}
        <div class="sf-toolbar-info-piece">
            <b>DB Queries</b>
            <span>{{ collector.getQueryCount() }}</span>
        </div>
        <div class="sf-toolbar-info-piece">
            <b>Query time</b>
            <span>{{ '%0.2f'|format(collector.getTotalQueryTime() * 1000) }} ms</span>
        </div>
    {% endset %}
    {% include '@WebProfiler/Profiler/toolbar_item.html.twig' with { 'link': profiler_url } %}
{% endblock %}

{% block menu %}
<span class="label">
    <span class="icon"><img src="data:image/png;base64," alt="Database"></span>
    <strong>Database</strong>
</span>
{% endblock %}

{% block panel %}
    <h2>Executed Database Queries</h2>

    <table>
        <tr>
            <th>Query</th>
            <th>Arguments</th>
            <th>Time</th>
        </tr>
        {% for q in collector.getQueries() %}
            <tr>
                <td><code>{{ q.query|nl2br }}</code></td>
                <td><code>{{ dump(q.args) }}</code></td>
                <td>{{ '%0.2f'|format(q.time * 1000) }} ms</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
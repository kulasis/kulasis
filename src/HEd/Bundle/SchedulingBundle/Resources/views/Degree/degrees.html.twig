{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Degrees
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_degrees', 'STUD_DEGREE') }}
</span>
</div>
<table id="window_window_num_data_table_degrees" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'STUD_DEGREE', db_field: 'DEGREE_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'STUD_DEGREE', db_field: 'DEGREE_NAME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_DEGREE', db_field: 'EFFECTIVE_TERM_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_DEGREE', db_field: 'MINIMUM_CREDITS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_DEGREE', db_field: 'MINIMUM_GPA', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">Requirements</th>
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'STUD_DEGREE', db_field: 'DEGREE_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'STUD_DEGREE', db_field: 'DEGREE_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_DEGREE', db_field: 'DEGREE_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DEGREE', db_field: 'DEGREE_NAME', prepend_html: '<td>', append_html: '</td>', attributes_html: { class: 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DEGREE', db_field: 'EFFECTIVE_TERM_ID', prepend_html: '<td>', append_html: '</td>', attributes_html: { class: 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DEGREE', db_field: 'MINIMUM_CREDITS', prepend_html: '<td>', append_html: '</td>', attributes_html: { class: 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DEGREE', db_field: 'MINIMUM_GPA', prepend_html: '<td>', append_html: '</td>', attributes_html: { class: 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_DEGREE_REQ_GRP', db_field: 'DEGREE_REQ_GRP_ID', prepend_html: '<td class="data-table-cell-row-num">Requirements</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_DEGREE', db_field: 'DEGREE_ID', prepend_html: '</tr>' }) }}
	{% for degree in degrees %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'STUD_DEGREE', db_field: 'DEGREE_ID', db_row_id: degree.DEGREE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'STUD_DEGREE', db_field: 'DEGREE_NAME', db_row_id: degree.DEGREE_ID, value: degree.DEGREE_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_DEGREE', db_field: 'EFFECTIVE_TERM_ID', db_row_id: degree.DEGREE_ID, value: degree.EFFECTIVE_TERM_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_DEGREE', db_field: 'MINIMUM_CREDITS', db_row_id: degree.DEGREE_ID, value: degree.MINIMUM_CREDITS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_DEGREE', db_field: 'MINIMUM_GPA', db_row_id: degree.DEGREE_ID, value: degree.MINIMUM_GPA, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		<td><a class="normal-link"  data-record-id="{{ record_obj.getSelectedRecordID() }}" data-record-type="{{ record_obj.getRecordType() }}" href="{{ path('sis_offering_degrees_requirements_groups', { type: 'degree', id: degree.DEGREE_ID }) }}">Requirements</a></td>
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
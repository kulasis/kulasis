{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Prerequisites
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_requirement_groups', 'STUD_COURSE_PREREQUISITES') }}
</span>
</div>
<table id="window_window_num_data_table_requirement_groups" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'HEd.Course.Prerequisite.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'HEd.Course.Prerequisite.CourseID', field_name_override: 'Course Prerequisite', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Course.Prerequisite.MinimumMark', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'HEd.Course.Prerequisite.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, field: 'HEd.Course.Prerequisite.CourseID', value: kula_core_record.getSelectedRecordID(), hidden: true }) }}
  {{ kula_field({ add: true, delete: true, field: 'HEd.Course.Prerequisite.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Course.Prerequisite.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.Course.Prerequisite.CourseID', prepend_html: '<td>', append_html: '</td>', attributes_html: { class: 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Course.Prerequisite.MinimumMark', MARK_SCALE_ID: course_info.MARK_SCALE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class: 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Course.Prerequisite.ID', prepend_html: '</tr>' }) }}
  {% for prereq in prerequisites %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.Course.Prerequisite.ID', db_row_id: prereq.COURSE_PREREQUISITE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'HEd.Course.Prerequisite.CourseID', db_row_id: prereq.COURSE_PREREQUISITE_ID, value: prereq.PREREQUISITE_COURSE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.Course.Prerequisite.MinimumMark', db_row_id: prereq.COURSE_PREREQUISITE_ID, value: prereq.MINIMUM_MARK, MARK_SCALE_ID: course_info.MARK_SCALE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
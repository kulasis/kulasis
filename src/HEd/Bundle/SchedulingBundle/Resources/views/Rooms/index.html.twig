{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Rooms
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_rooms', 'STUD_ROOM') }}
</span>
</div>
<table id="window_window_num_data_table_rooms" class="data-table">
<thead>
	{{ kula_field_name({ delete: true, db_table: 'STUD_ROOM', db_field: 'ROOM_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ edit: true, db_table: 'STUD_ROOM', db_field: 'ROOM_NUMBER', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ edit: true, db_table: 'STUD_ROOM', db_field: 'BUILDING', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ edit: true, db_table: 'STUD_ROOM', db_field: 'ROOM_NAME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
	  {{ kula_display_html({ add: true, db_table: 'STUD_ROOM', db_field: 'ROOM_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
		{{ kula_field({ add: true, db_table: 'STUD_ROOM', db_field: 'ORGANIZATION_TERM_ID', value: record_obj.getSelectedRecord.ORGANIZATION_TERM_ID, hidden: true }) }}
		{{ kula_field({ add: true, db_table: 'STUD_ROOM', db_field: 'ROOM_ID', value: record_obj.getSelectedRecord.ROOM_ID, hidden: true }) }}
		{{ kula_field({ add: true, delete: true, db_table: 'STUD_ROOM', db_field: 'ROOM_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		{{ kula_display_html({ add: true, db_table: 'STUD_ROOM', db_field: 'ROOM_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
		{{ kula_field({ add: true, db_table: 'STUD_ROOM', db_field: 'ROOM_NUMBER', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ add: true, db_table: 'STUD_ROOM', db_field: 'BUILDING', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ add: true, db_table: 'STUD_ROOM', db_field: 'ROOM_NAME', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_display_html({ add: true, db_table: 'STUD_ROOM', db_field: 'ROOM_ID', prepend_html: '</tr>' }) }}
	{% for room in rooms %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'STUD_ROOM', db_field: 'ROOM_ID', db_row_id: room.ROOM_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'STUD_ROOM', db_field: 'ROOM_NUMBER', db_row_id: room.ROOM_ID, value: room.ROOM_NUMBER, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_ROOM', db_field: 'BUILDING', db_row_id: room.ROOM_ID, value: room.BUILDING, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_ROOM', db_field: 'ROOM_NAME', db_row_id: room.ROOM_ID, value: room.ROOM_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
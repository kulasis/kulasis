{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Rooms
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_rooms', 'STUD_ROOM') }}
</span>
</div>
<table id="window_window_num_data_table_rooms" class="data-table">
<thead>
  {{ kula_field_name({ delete: true, field: 'HEd.Room.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ edit: true, field: 'HEd.Room.Number', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'HEd.Room.Building', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'HEd.Room.Name', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
    {{ kula_display_html({ add: true, field: 'HEd.Room.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
    {{ kula_field({ add: true, field: 'HEd.Room.OrganizationTermID, value: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, hidden: true }) }}
    {{ kula_field({ add: true, field: 'HEd.Room.ID', value: kula_core_record.getSelectedRecord.ROOM_ID, hidden: true }) }}
    {{ kula_field({ add: true, delete: true, field: 'HEd.Room.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    {{ kula_display_html({ add: true, field: 'HEd.Room.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
    {{ kula_field({ add: true, field: 'HEd.Room.Number', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'HEd.Room.Building', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'HEd.Room.Name', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_display_html({ add: true, field: 'HEd.Room.ID', prepend_html: '</tr>' }) }}
  {% for room in rooms %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.Room.ID', db_row_id: room.ROOM_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'HEd.Room.Number', db_row_id: room.ROOM_ID, value: room.ROOM_NUMBER, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.Room.Building', db_row_id: room.ROOM_ID, value: room.BUILDING, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.Room.Name', db_row_id: room.ROOM_ID, value: room.ROOM_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
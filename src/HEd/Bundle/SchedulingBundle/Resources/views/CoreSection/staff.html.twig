{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Staff
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_courses', 'STUD_SECTION_STAFF') }}
</span>
</div>
<table id="window_window_num_data_table_courses" class="data-table">
<thead>
  {{ kula_field_name({ delete: true, field: 'HEd.Section.Staff.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'HEd.Section.Staff.StaffOrganizationTermID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'HEd.Section.Staff.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, field: 'HEd.Section.Staff.SectionID', value: kula_core_record.getSelectedRecord.SECTION_ID, hidden: true }) }}
  {{ kula_field({ add: true, delete: true, field: 'HEd.Section.Staff.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Section.Staff.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.Section.Staff.StaffOrganizationTermID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Section.Staff.ID', prepend_html: '</tr>' }) }}
  {% for member in staff %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.Section.Staff.ID', db_row_id: member.SECTION_STAFF_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'HEd.Section.Staff.StaffOrganizationTermID', db_row_id: member.SECTION_STAFF_ID, value: member.STAFF_ORGANIZATION_TERM_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
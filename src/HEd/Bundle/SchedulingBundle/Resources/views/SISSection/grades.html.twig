{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="group-box">
<div class="group-box-header">Teacher Grading Completed</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, db_table: 'STUD_SECTION', db_field: 'TEACHER_GRADES_COMPLETED', db_row_id: record_obj.getSelectedRecord.SECTION_ID, value: section_info.TEACHER_GRADES_COMPLETED, field_name_override: 'Completed', label: true }) }}
{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'TEACHER_GRADES_COMPLETED_USERSTAMP', db_row_id: record_obj.getSelectedRecord.SECTION_ID, value: section_info.USERNAME, field_name_override: 'User', label: true }) }}
{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'TEACHER_GRADES_COMPLETED_TIMESTAMP', db_row_id: record_obj.getSelectedRecord.SECTION_ID, value: section_info.TEACHER_GRADES_COMPLETED_TIMESTAMP, field_name_override: 'Timestamp', label: true }) }}
</div>
</div>

<div class="data-table-header-div">
Class Grades
<span class="data-table-header-buttons">
</span>
</div>
<table id="window_window_num_data_table_terms" class="data-table">
<thead>
	<tr>
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'CONS_CONSTITUENT', db_field: 'PERMANENT_NUMBER', field_name_override: 'Student ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_CONSTITUENT', db_field: 'LAST_NAME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_CONSTITUENT', db_field: 'FIRST_NAME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_CONSTITUENT', db_field: 'GENDER', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_COURSE_HISTORY', db_field: 'MARK', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_CLASSES', db_field: 'DROPPED', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</tr>
</thead>
<tbody>
	{% for student in students %}
	<tr>
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ db_table: 'CONS_CONSTITUENT', db_field: 'PERMANENT_NUMBER', db_row_id: student.STUDENT_CLASS_ID, value: student.PERMANENT_NUMBER, input: false, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'CONS_CONSTITUENT', db_field: 'LAST_NAME', db_row_id: student.STUDENT_CLASS_ID, value: student.LAST_NAME, input: false, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'CONS_CONSTITUENT', db_field: 'FIRST_NAME', db_row_id: student.STUDENT_CLASS_ID, value: student.FIRST_NAME, input: false, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'CONS_CONSTITUENT', db_field: 'GENDER', db_row_id: student.STUDENT_CLASS_ID, value: student.GENDER, lookup: 'C', input: false, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{% if student.COURSE_HISTORY_ID %}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY', db_field: 'MARK', db_row_id: student.COURSE_HISTORY_ID, value: student.MARK, MARK_SCALE_ID: student.MARK_SCALE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{% else %}
		{{ kula_field({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY', db_field: 'MARK', table_row: false, db_row_id: student.STUDENT_CLASS_ID, MARK_SCALE_ID: student.MARK_SCALE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{% endif %}
		{{ kula_field({ db_table: 'STUD_STUDENT_CLASSES', db_field: 'DROPPED', db_row_id: student.STUDENT_CLASS_ID, value: student.DROPPED, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% if student.ALLOW_COMMENTS == 'Y' or student.REQUIRE_COMMENTS == 'Y' %}
		<tr>
			<td class="data-table-cell-row-num">{{ loop.index }}</td>
      {{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY', db_field: 'COMMENTS', db_row_id: student.COURSE_HISTORY_ID, value: student.COMMENTS, prepend_html: '<td colspan="6">', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    </tr>
	{% endif %}
	{% endfor %}
</tbody>
</table>

{% endblock %}
{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Books
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_rooms', 'STUD_COURSE_BOOK', { school_term_only: true }) }}
</span>
</div>
<table id="window_window_num_data_table_rooms" class="data-table">
<thead>
	{{ kula_field_name({ delete: true, school_term_only: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COURSE_BOOK_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ edit: true, db_table: 'CORE_ORGANIZATION_TERMS', db_field: 'ORGANIZATION_TERM_ID', field_name_override: 'Term / Organization', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ edit: true, db_table: 'STUD_COURSE_BOOK', db_field: 'ISBN_NUMBER', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ edit: true, db_table: 'STUD_COURSE_BOOK', db_field: 'PUBLISHER', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ edit: true, db_table: 'STUD_COURSE_BOOK', db_field: 'TITLE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ edit: true, db_table: 'STUD_COURSE_BOOK', db_field: 'AUTHOR', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ edit: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COST', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
	  {{ kula_display_html({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COURSE_BOOK_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
		{{ kula_field({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'ORGANIZATION_TERM_ID', value: organization_term_id, hidden: true }) }}
		{{ kula_field({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COURSE_ID', value: record_obj.getSelectedRecord.COURSE_ID, hidden: true }) }}
		{{ kula_field({ add: true, delete: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COURSE_BOOK_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		{{ kula_display_html({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COURSE_BOOK_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
		{{ kula_field({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'ORGANIZATION_TERM_ID', value: organization_term_id_display, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'ISBN_NUMBER', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'PUBLISHER', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'TITLE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'AUTHOR', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COST', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_display_html({ add: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COURSE_BOOK_ID', prepend_html: '</tr>' }) }}
	{% for book in books %}
	<tr>
		{{ kula_field({ delete: true, school_term_only: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COURSE_BOOK_ID', db_row_id: book.COURSE_BOOK_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{% set orgterm = book.TERM_ABBREVIATION ~ ' / ' ~ book.ORGANIZATION_NAME %}
		{{ kula_field({ db_table: 'STUD_COURSE_BOOK', school_term_only: true, db_field: 'ORGANIZATION_TERM_ID', db_row_id: book.COURSE_BOOK_ID, value: orgterm, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, school_term_only: true, db_table: 'STUD_COURSE_BOOK', db_field: 'ISBN_NUMBER', db_row_id: book.COURSE_BOOK_ID, value: book.ISBN_NUMBER, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, school_term_only: true, db_table: 'STUD_COURSE_BOOK', db_field: 'PUBLISHER', db_row_id: book.COURSE_BOOK_ID, value: book.PUBLISHER, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, school_term_only: true, db_table: 'STUD_COURSE_BOOK', db_field: 'TITLE', db_row_id: book.COURSE_BOOK_ID, value: book.TITLE, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, school_term_only: true, db_table: 'STUD_COURSE_BOOK', db_field: 'AUTHOR', db_row_id: book.COURSE_BOOK_ID, value: book.AUTHOR, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, school_term_only: true, db_table: 'STUD_COURSE_BOOK', db_field: 'COST', db_row_id: book.COURSE_BOOK_ID, value: book.COST, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
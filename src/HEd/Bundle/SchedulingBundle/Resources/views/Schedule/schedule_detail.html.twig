{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block detail %}
<div class="group-box">
<div class="group-box-header">Registration</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_CLASSES', db_field: 'PRIORITY', db_row_id: class.STUDENT_CLASS_ID, value: class.PRIORITY, label: true }) }}
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_CLASSES', db_field: 'REGISTRATION_TYPE', db_row_id: class.STUDENT_CLASS_ID, value: class.REGISTRATION_TYPE, label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Change Reason</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_CLASSES', db_field: 'CHANGE_REASON', db_row_id: class.STUDENT_CLASS_ID, value: class.CHANGE_REASON, label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_CLASSES', db_field: 'CHANGE_NOTES', db_row_id: class.STUDENT_CLASS_ID, value: class.CHANGE_NOTES, label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Additional Course</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_CLASSES', db_field: 'COURSE_ID', db_row_id: class.STUDENT_CLASS_ID, SECTION_ID: class.SECTION_ID, value: class.COURSE_ID, label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Degree Requirement Group</div>
<div class="group-box-contents group">
	{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_CLASSES', db_field: 'DEGREE_REQ_GRP_ID', db_row_id: class.STUDENT_CLASS_ID, field_name_override: 'Req Group', value: class.DEGREE_REQ_GRP_ID, STUDENT_ID: record_obj.getSelectedRecord().STUDENT_ID, label: true }) }}
</div>
</div>
{% endblock %}
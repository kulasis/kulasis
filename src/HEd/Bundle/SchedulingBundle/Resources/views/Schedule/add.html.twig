{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}

{% include 'KulaHEdSchedulingBundle:Schedule:current_schedule.html.twig' %}

<div class="group-box">
<div class="group-box-header">Search Sections</div>
<div class="group-box-contents group">
{{ kula_field({ search: true, db_table: 'STUD_SECTION', db_field: 'SECTION_NUMBER', label: true }) }}
{{ kula_field({ search: true, db_table: 'STUD_SECTION', db_field: 'COURSE_ID', field_name_override: 'Course', label: true }) }}
{{ kula_field({ search: true, db_table: 'STUD_SECTION', field_name_override: 'Instructor', db_field: 'STAFF_ORGANIZATION_TERM_ID', label: true }) }}
</div>
</div>

{% if search_classes %}
<div class="group-box">
<div class="group-box-header">Add Classes</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, table_row: false, db_table: 'STUD_STUDENT_CLASSES', db_field: 'START_DATE', value: start_date, label: true }) }}
</div>
</div>

<div class="data-table-header-div">
Section Results
<span class="data-table-header-buttons">
</span>
</div>
<table id="window_window_num_data_table_terms" class="data-table">
<thead>
	<th class="data-table-cell-row-header">+</th>
	<th class="data-table-cell-row-header">W</th>
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'STUD_SECTION', db_field: 'SECTION_NUMBER', field_name_override: 'Section', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_COURSE', db_field: 'COURSE_NUMBER', field_name_override: 'Course', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_COURSE', db_field: 'COURSE_TITLE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SECTION', db_field: 'CALC_MEETS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SECTION_MEETINGS', db_field: 'START_TIME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SECTION_MEETINGS', db_field: 'END_TIME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_ROOM', db_field: 'ROOM_NAME', field_name_override: 'Room', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STAFF', db_field: 'ABBREVIATED_NAME', field_name_override: 'Instructor', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SECTION', db_field: 'CREDITS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SECTION', db_field: 'CAPACITY', field_name_override: 'MAX', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SECTION', db_field: 'ENROLLED_TOTAL', field_name_override: 'ENR', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SECTION', db_field: 'CALC_AVAILABLE', field_name_override: 'AVL', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SECTION', db_field: 'WAIT_LISTED_TOTAL', field_name_override: 'WAIT', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
	{% set lastsectionid = '' %}
	{% set index = 1 %}
	{% for class in search_classes %}
	<tr>
		{% if class.SECTION_ID == lastsectionid %}
		{{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_CLASSES', db_field: 'STUDENT_CLASS_ID', prepend_html: '<td class="data-table-cell-row-delete">&nbsp;', append_html: '</td>' }) }}
		{{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_WAIT_LIST', db_field: 'STUDENT_WAIT_LIST_ID', prepend_html: '<td class="data-table-cell-row-delete">&nbsp;', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">&nbsp;</td>
		<td colspan="3">&nbsp;</td>
		{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'CALC_MEETS', input: false, value: class.meets, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION_MEETINGS', db_field: 'START_TIME', input: false, value: class.START_TIME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION_MEETINGS', db_field: 'END_TIME', input: false, value: class.END_TIME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_ROOM', db_field: 'ROOM_NUMBER', input: false, value: class.ROOM_NUMBER, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		<td colspan="8">&nbsp;</td>
		{% else %}
		{{ kula_field({ add: true, table_row: false, db_table: 'STUD_STUDENT_CLASSES', db_field: 'SECTION_ID', value: class.SECTION_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		{{ kula_field({ add: true, post_type: 'wait_list', table_row: false, db_table: 'STUD_STUDENT_WAIT_LIST', db_field: 'SECTION_ID', value: class.SECTION_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ index }}</td>
		{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'SECTION_NUMBER', input: false, value: class.SECTION_NUMBER, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_COURSE', db_field: 'COURSE_NUMBER', input: false, value: class.COURSE_NUMBER, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_COURSE', db_field: 'COURSE_TITLE', input: false, value: class.COURSE_TITLE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'CALC_MEETS', input: false, value: class.meets, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION_MEETINGS', db_field: 'START_TIME', input: false, value: class.START_TIME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION_MEETINGS', db_field: 'END_TIME', input: false, value: class.END_TIME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_ROOM', db_field: 'ROOM_NUMBER', input: false, value: class.ROOM_NUMBER, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_STAFF', db_field: 'ABBREVIATED_NAME', input: false, value: class.ABBREVIATED_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'CREDITS', input: false, value: class.CREDITS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'CAPACITY', input: false, value: class.CAPACITY, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'ENROLLED_TOTAL', input: false, value: class.ENROLLED_TOTAL, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{% set availableseats = class.CAPACITY - class.ENROLLED_TOTAL %}
		{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'CALC_AVAILABLE', input: false, value: availableseats, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ db_table: 'STUD_SECTION', db_field: 'WAIT_LISTED_TOTAL', input: false, value: class.WAIT_LISTED_TOTAL, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% set index = index + 1 %}
	{% endif %}
	{% set lastsectionid = class.SECTION_ID %}
	{% endfor %}
</tbody>
</table>
{% endif %}
{% endblock %}
{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}

<div class="group-box">
<div class="group-box-header">Default Enrollment Settings</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'HEd.School.DefaultLevel', db_row_id: kula_core_record.getSelectedRecord.ORGANIZATION_ID, value: school.DEFAULT_LEVEL, label: true }) }}
{{ kula_field({ edit: true, field: 'HEd.School.DefaultGrade', db_row_id: kula_core_record.getSelectedRecord.ORGANIZATION_ID, value: school.DEFAULT_GRADE, label: true }) }}
{{ kula_field({ edit: true, field: 'HEd.School.DefaultEnterCode', db_row_id: kula_core_record.getSelectedRecord.ORGANIZATION_ID, value: school.DEFAULT_ENTER_CODE, label: true }) }}
</div>
</div>


<div class="group-box">
<div class="group-box-header">Teacher Grading Dates</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'HEd.School.Term.TeacherGradesOpen', db_row_id: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, value: schoolterm.TEACHER_GRADES_OPEN, label: true }) }}
{{ kula_field({ edit: true, field: 'HEd.School.Term.TeacherGradesClose', db_row_id: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, value: schoolterm.TEACHER_GRADES_CLOSE, label: true }) }}
</div>
</div>


{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Levels
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_levels', 'STUD_SCHOOL_TERM_LEVEL') }}
</span>
</div>
<table id="window_window_num_data_table_levels" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'HEd.School.Term.Level.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'HEd.School.Term.Level.Level', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.School.Term.Level.MinimumFullTimeHours', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.School.Term.Level.MinimumPartTimeHours', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.School.Term.Level.FTEFullTimeHours', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">Actions</th>
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'HEd.School.Term.Level.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, field: 'HEd.School.Term.Level.OrganizationTermID', value: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, hidden: true }) }}
  {{ kula_field({ add: true, delete: true, field: 'HEd.School.Term.Level.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.School.Term.Level.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.School.Term.Level.Level', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.School.Term.Level.MinimumFullTimeHours', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.School.Term.Level.MinimumPartTimeHours', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.School.Term.Level.FTEFullTimeHours', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_display_html({ add: true, field: 'HEd.School.Term.Level.ID', prepend_html: '<td class="data-table-cell-row-num">Actions</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.School.Term.Level.ID', prepend_html: '</tr>' }) }}
  {% for level in levels %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.School.Term.Level.ID', db_row_id: level.SCHOOL_TERM_LEVEL_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'HEd.School.Term.Level.Level', db_row_id: level.SCHOOL_TERM_LEVEL_ID, value: level.LEVEL, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.School.Term.Level.MinimumFullTimeHours', db_row_id: level.SCHOOL_TERM_LEVEL_ID, value: level.MIN_FULL_TIME_HOURS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.School.Term.Level.MinimumPartTimeHours', db_row_id: level.SCHOOL_TERM_LEVEL_ID, value: level.MIN_PART_TIME_HOURS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.School.Term.Level.FTEFullTimeHours', db_row_id: level.SCHOOL_TERM_LEVEL_ID, value: level.FTE_FULL_TIME_HOURS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    <td>
      <a class="normal-link"  data-record-id="{{ kula_core_record.getSelectedRecordID() }}" data-record-type="{{ kula_core_record.getRecordType() }}" href="{{ path('sis_HEd_school_schoolsetup_levels_fte', { level_id: level.SCHOOL_TERM_LEVEL_ID }) }}">FTE</a>
    </td>
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="group-box">
<div class="group-box-header">Name</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'Core.Constituent.LastName', db_row_id: kula_core_record.getSelectedRecord.STAFF_ID, value: kula_core_record.getSelectedRecord.LAST_NAME, label: true, attributes_html: { 'size' : 30 } }) }}
{{ kula_field({ edit: true, field: 'Core.Constituent.FirstName', db_row_id: kula_core_record.getSelectedRecord.STAFF_ID, value: kula_core_record.getSelectedRecord.FIRST_NAME, label: true, attributes_html: { 'size' : 30 } }) }}
{{ kula_field({ edit: true, field: 'Core.Constituent.MiddleName', db_row_id: kula_core_record.getSelectedRecord.STAFF_ID, value: kula_core_record.getSelectedRecord.MIDDLE_NAME, label: true, attributes_html: { 'size' : 30 } }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Staff Info</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'HEd.Staff.AbbreviatedName', db_row_id: staff.STAFF_ID, value: staff.ABBREVIATED_NAME, label: true, attributes_html: { 'size' : 40 } }) }}
{{ kula_field({ edit: true, field: 'HEd.Staff.ConversionStaffNumber', db_row_id: staff.STAFF_ID, value: staff.CONV_STAFF_NUMBER, label: true, attributes_html: { 'size' : 40 } }) }}
</div>
</div>

{% endblock %}
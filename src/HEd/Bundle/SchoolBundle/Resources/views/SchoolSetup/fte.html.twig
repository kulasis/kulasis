{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<p>
	<a class="normal-link"  data-record-id="{{ record_obj.getSelectedRecordID() }}" data-record-type="{{ record_obj.getRecordType() }}" href="{{ path('sis_setup_schoolsetup_levels') }}">Back to Levels</a>
</p>

<div class="data-table-header-div">
FTE
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_chargecodes', 'STUD_SCHOOL_TERM_LEVEL_FTE') }}
</span>
</div>
<table id="window_window_num_data_table_chargecodes" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'SCHOOL_TERM_LEVEL_FTE_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'CREDIT_TOTAL', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'FTE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'SCHOOL_TERM_LEVEL_FTE_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'SCHOOL_TERM_LEVEL_FTE_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_field({ add: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'SCHOOL_TERM_LEVEL_ID', value: school_term_level_id, hidden: true }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'SCHOOL_TERM_LEVEL_FTE_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'CREDIT_TOTAL', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'FTE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'SCHOOL_TERM_LEVEL_FTE_ID', prepend_html: '</tr>' }) }}
	{% for fte_row in fte %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'SCHOOL_TERM_LEVEL_FTE_ID', db_row_id: fte_row.SCHOOL_TERM_LEVEL_FTE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'CREDIT_TOTAL', db_row_id: fte_row.SCHOOL_TERM_LEVEL_FTE_ID, value: fte_row.CREDIT_TOTAL, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_SCHOOL_TERM_LEVEL_FTE', db_field: 'FTE', db_row_id: fte_row.SCHOOL_TERM_LEVEL_FTE_ID, value: fte_row.FTE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
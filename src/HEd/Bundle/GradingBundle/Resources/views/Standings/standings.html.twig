{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Standings
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_standings', 'STUD_STUDENT_COURSE_HISTORY_STANDING') }}
</span>
</div>
<table id="window_window_num_data_table_standings" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STUDENT_COURSE_HISTORY_STANDING_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'CALENDAR_MONTH', field_name_override: 'Cal Mon', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'CALENDAR_YEAR', field_name_override: 'Cal Yr', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'TERM', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STANDING_ID', field_name_override: 'Standing', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STUDENT_COURSE_HISTORY_STANDING_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, hidden: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STUDENT_ID', value: record_obj.getSelectedRecord.STUDENT_ID }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STUDENT_COURSE_HISTORY_STANDING_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STUDENT_COURSE_HISTORY_STANDING_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'CALENDAR_MONTH', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'CALENDAR_YEAR', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'TERM', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STANDING_ID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STUDENT_COURSE_HISTORY_STANDING_ID', prepend_html: '</tr>' }) }}
	{% for standing in standings %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STUDENT_COURSE_HISTORY_STANDING_ID', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'CALENDAR_MONTH', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, value: standing.CALENDAR_MONTH, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'CALENDAR_YEAR', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, value: standing.CALENDAR_YEAR, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'TERM', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, value: standing.TERM, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_STANDING', db_field: 'STANDING_ID', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, value: standing.STANDING_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'TERM', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}

	{{ kula_field_name({ delete: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'STUDENT_COURSE_HISTORY_COMMENT_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'LEVEL', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'CALENDAR_MONTH', field_name_override: 'Cal Mon', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'CALENDAR_YEAR', field_name_override: 'Cal Yr', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}

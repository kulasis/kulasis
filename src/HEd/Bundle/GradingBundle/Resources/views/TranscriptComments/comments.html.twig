	{{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'STUDENT_COURSE_HISTORY_COMMENT_ID', prepend_html: '</tr>' }) }}
	{% for comment in comments %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'STUDENT_COURSE_HISTORY_COMMENT_ID', db_row_id: comment.STUDENT_COURSE_HISTORY_COMMENT_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'LEVEL', db_row_id: comment.STUDENT_COURSE_HISTORY_COMMENT_ID, value: comment.DEGREE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'CALENDAR_MONTH', db_row_id: comment.STUDENT_COURSE_HISTORY_COMMENT_ID, value: comment.CALENDAR_MONTH, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}

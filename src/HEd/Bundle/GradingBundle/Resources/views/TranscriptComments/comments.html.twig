<tbody>
  {{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'STUDENT_COURSE_HISTORY_COMMENT_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, hidden: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'STUDENT_ID', value: record_obj.getSelectedRecord.STUDENT_ID }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'STUDENT_COURSE_HISTORY_COMMENT_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}

		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'TERM', db_row_id: comment.STUDENT_COURSE_HISTORY_COMMENT_ID, value: comment.TERM, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'COMMENTS', db_row_id: comment.STUDENT_COURSE_HISTORY_COMMENT_ID, value: comment.COMMENTS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}

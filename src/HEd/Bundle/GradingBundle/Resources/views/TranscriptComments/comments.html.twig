	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'LEVEL', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_COURSE_HISTORY_COMMENT', db_field: 'CALENDAR_MONTH', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}

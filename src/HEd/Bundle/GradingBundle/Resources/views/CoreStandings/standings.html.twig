{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Standings
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_standings', 'STUD_STUDENT_COURSE_HISTORY_STANDING') }}
</span>
</div>
<table id="window_window_num_data_table_standings" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'HEd.Student.CourseHistory.Standing.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'HEd.Student.CourseHistory.Standing.CalendarMonth', field_name_override: 'Cal Mon', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Student.CourseHistory.Standing.CalendarYear', field_name_override: 'Cal Yr', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Student.CourseHistory.Standing.Term', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Student.CourseHistory.Standing.StandingID', field_name_override: 'Standing', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'HEd.Student.CourseHistory.Standing.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, hidden: true, field: 'HEd.Student.CourseHistory.Standing.StudentID', value: kula_core_record.getSelectedRecord.STUDENT_ID }) }}
  {{ kula_field({ add: true, delete: true, field: 'HEd.Student.CourseHistory.Standing.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Student.CourseHistory.Standing.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.Student.CourseHistory.Standing.CalendarMonth', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Student.CourseHistory.Standing.CalendarYear', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Student.CourseHistory.Standing.Term', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Student.CourseHistory.Standing.StandingID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Student.CourseHistory.Standing.ID', prepend_html: '</tr>' }) }}
  {% for standing in standings %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.Student.CourseHistory.Standing.ID', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'HEd.Student.CourseHistory.Standing.CalendarMonth', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, value: standing.CALENDAR_MONTH, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.Student.CourseHistory.Standing.CalendarYear', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, value: standing.CALENDAR_YEAR, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.Student.CourseHistory.Standing.Term', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, value: standing.TERM, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.Student.CourseHistory.Standing.StandingID', db_row_id: standing.STUDENT_COURSE_HISTORY_STANDING_ID, value: standing.STANDING_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<p>
<a class="normal-link"  data-record-id="{{ kula_core_record.getSelectedRecordID() }}" data-record-type="{{ kula_core_record.getRecordType() }}" href="{{ path('Core_HEd_Grading_StudentCourseHistory_Degrees') }}">Back to Degrees</a>
</p>

<div class="group-box">
<div class="group-box-header">Degree Information</div>
<div class="group-box-contents group">
  {{ kula_field({ edit: true, field: 'HEd.Student.Degree.ExpectedGraduationDate', db_row_id: degree.STUDENT_DEGREE_ID, value: degree.EXPECTED_GRADUATION_DATE, label: true }) }}
</div>
</div>

<div class="data-table-header-div">
Areas
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_areas', 'STUD_STUDENT_DEGREES_AREAS') }}
</span>
</div>
<table id="window_window_num_data_table_areas" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'HEd.Student.Degree.Area.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'HEd.Student.Degree.Area.AreaID', field_name_override: 'Area Name', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'HEd.Student.Degree.Area.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, hidden: true, field: 'HEd.Student.Degree.Area.StudentDegreeID', value: student_degree_id }) }}
  {{ kula_field({ add: true, delete: true, field: 'HEd.Student.Degree.Area.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Student.Degree.Area.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.Student.Degree.Area.AreaID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Student.Degree.Area.ID', prepend_html: '</tr>' }) }}
  {% for area in areas %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.Student.Degree.Area.ID', db_row_id: area.STUDENT_AREA_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'HEd.Student.Degree.Area.AreaID', db_row_id: area.STUDENT_AREA_ID, value: area.AREA_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
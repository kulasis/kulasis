{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Document Codes
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_documentcodes', 'STUD_DOCUMENT') }}
</span>
</div>
<table id="window_window_num_data_table_documentcodes" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_CODE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_NAME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_DESCRIPTION', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_DOCUMENT', db_field: 'INACTIVE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_DOCUMENT', db_field: 'CONV_DOCUMENT_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_CODE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_NAME', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_DESCRIPTION', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DOCUMENT', db_field: 'INACTIVE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_DOCUMENT', db_field: 'CONV_DOCUMENT_ID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_ID', prepend_html: '</tr>' }) }}
	{% for code in document_codes %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_ID', db_row_id: code.DOCUMENT_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_CODE', db_row_id: code.DOCUMENT_ID, value: code.DOCUMENT_CODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_NAME', db_row_id: code.DOCUMENT_ID, value: code.DOCUMENT_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_DOCUMENT', db_field: 'DOCUMENT_DESCRIPTION', db_row_id: code.DOCUMENT_ID, value: code.DOCUMENT_DESCRIPTION, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_DOCUMENT', db_field: 'INACTIVE', db_row_id: code.DOCUMENT_ID, value: code.INACTIVE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_DOCUMENT', db_field: 'CONV_DOCUMENT_ID', db_row_id: code.DOCUMENT_ID, value: code.CONV_DOCUMENT_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
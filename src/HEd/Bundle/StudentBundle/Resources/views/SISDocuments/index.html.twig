{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Documents
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_documents', 'STUD_STUDENT_DOCUMENTS') }}
</span>
</div>
<table id="window_window_num_data_table_documents" class="data-table">
<thead>
	{{ kula_field_name({ delete: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'STUDENT_DOCUMENT_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_DATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_ID', field_name_override: 'Document Name', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_STATUS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'COMMENTS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'COMPLETED_DATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'STUDENT_DOCUMENT_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'STUDENT_ID', value: record_obj.getSelectedRecord.STUDENT_ID, hidden: true }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'STUDENT_DOCUMENT_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'STUDENT_DOCUMENT_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_DATE', value:"now"|date("m/d/Y"), prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_ID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_STATUS', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'COMMENTS', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'COMPLETED_DATE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'STUDENT_DOCUMENT_ID', prepend_html: '</tr>' }) }}
	{% for document in documents %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'STUDENT_DOCUMENT_ID', db_row_id: document.STUDENT_DOCUMENT_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_DATE', db_row_id: document.STUDENT_DOCUMENT_ID, value: document.DOCUMENT_DATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_ID', db_row_id: document.STUDENT_DOCUMENT_ID, value: document.DOCUMENT_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'DOCUMENT_STATUS', db_row_id: document.STUDENT_DOCUMENT_ID, value: document.DOCUMENT_STATUS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'COMMENTS', db_row_id: document.STUDENT_DOCUMENT_ID, value: document.COMMENTS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_DOCUMENTS', db_field: 'COMPLETED_DATE', db_row_id: document.STUDENT_DOCUMENT_ID, value: document.COMPLETED_DATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
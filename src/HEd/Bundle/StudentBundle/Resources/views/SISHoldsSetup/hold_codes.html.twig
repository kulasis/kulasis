{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Hold Codes
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_holdcodes', 'STUD_HOLD') }}
</span>
</div>
<table id="window_window_num_data_table_holdcodes" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'STUD_HOLD', db_field: 'HOLD_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'STUD_HOLD', db_field: 'HOLD_CODE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_HOLD', db_field: 'HOLD_NAME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_HOLD', db_field: 'HOLD_DESCRIPTION', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_HOLD', db_field: 'ALERT_DISPLAY', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_HOLD', db_field: 'INACTIVE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'STUD_HOLD', db_field: 'CONV_HOLD_CODE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'STUD_HOLD', db_field: 'HOLD_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'STUD_HOLD', db_field: 'HOLD_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_HOLD', db_field: 'HOLD_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'STUD_HOLD', db_field: 'HOLD_CODE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_HOLD', db_field: 'HOLD_NAME', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_HOLD', db_field: 'HOLD_DESCRIPTION', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_HOLD', db_field: 'ALERT_DISPLAY', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_HOLD', db_field: 'INACTIVE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'STUD_HOLD', db_field: 'CONV_HOLD_CODE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'STUD_HOLD', db_field: 'HOLD_ID', prepend_html: '</tr>' }) }}
	{% for code in hold_codes %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'STUD_HOLD', db_field: 'HOLD_ID', db_row_id: code.HOLD_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'STUD_HOLD', db_field: 'HOLD_CODE', db_row_id: code.HOLD_ID, value: code.HOLD_CODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_HOLD', db_field: 'HOLD_NAME', db_row_id: code.HOLD_ID, value: code.HOLD_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_HOLD', db_field: 'HOLD_DESCRIPTION', db_row_id: code.HOLD_ID, value: code.HOLD_DESCRIPTION, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_HOLD', db_field: 'ALERT_DISPLAY', db_row_id: code.HOLD_ID, value: code.ALERT_DISPLAY, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_HOLD', db_field: 'INACTIVE', db_row_id: code.HOLD_ID, value: code.INACTIVE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'STUD_HOLD', db_field: 'CONV_HOLD_CODE', db_row_id: code.HOLD_ID, value: code.CONV_HOLD_CODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
<div class="group-box-header">Original Enrollment</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, field: 'HEd.Student.OriginalEnterDate', db_row_id: student.STUDENT_ID, value: student.ORIGINAL_ENTER_DATE, label: true}) }}

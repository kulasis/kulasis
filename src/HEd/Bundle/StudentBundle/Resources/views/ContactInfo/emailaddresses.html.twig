{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Email Addresses
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_email', 'CONS_PHONE') }}
</span>
</div>
<table id="window_window_num_data_table_email" class="data-table">
<thead>
	{{ kula_field_name({ delete: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EFFECTIVE_DATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_TYPE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'CONSTITUENT_ID', value: record_obj.getSelectedRecord.STUDENT_ID, hidden: true }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EFFECTIVE_DATE', value:"now"|date("m/d/Y") , prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_TYPE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_ID', prepend_html: '</tr>' }) }}
	{% for email in emails %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_ID', db_row_id: email.EMAIL_ADDRESS_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EFFECTIVE_DATE', db_row_id: email.EMAIL_ADDRESS_ID, value: email.EFFECTIVE_DATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS_TYPE', db_row_id: email.EMAIL_ADDRESS_ID, value: email.EMAIL_ADDRESS_TYPE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'CONS_EMAIL_ADDRESS', db_field: 'EMAIL_ADDRESS', db_row_id: email.EMAIL_ADDRESS_ID, value: email.EMAIL_ADDRESS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
{% extends 'KulaCoreFrameworkBundle::core.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Forms
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_holdcodes', 'STUD_HOLD') }}
</span>
</div>
<table id="window_window_num_data_table_holdcodes" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'HEd.Form.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'HEd.Form.Name', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Form.Description', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Form.Type', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Form.Optional', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Form.Rule', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.Form.FormText', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'HEd.Form.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, delete: true, field: 'HEd.Form.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.Form.OrganizationTermID', value: kula_core_record.getSelectedRecord.ORGANIZATION_TERM_ID, hidden: true }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Form.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.Form.Name', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Form.Description', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Form.Type', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Form.Optional', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Form.Rule', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.Form.FormText', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'HEd.Form.ID', prepend_html: '</tr>' }) }}
  {% for form in forms %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.Form.ID', db_row_id: form.FORM_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'HEd.Form.Name', db_row_id: form.FORM_ID, value: form.FORM_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.Form.Description', db_row_id: form.FORM_ID, value: form.FORM_DESCRIPTION, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input'} }) }}
    {{ kula_field({ edit: true, field: 'HEd.Form.Type', db_row_id: form.FORM_ID, value: form.FORM_TYPE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input'} }) }}
    {{ kula_field({ edit: true, field: 'HEd.Form.Optional', db_row_id: form.FORM_ID, value: form.OPTIONAL, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input'} }) }}
    {{ kula_field({ edit: true, field: 'HEd.Form.Rule', db_row_id: form.FORM_ID, value: form.RULE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input'} }) }}
    {{ kula_field({ edit: true, field: 'HEd.Form.FormText', db_row_id: form.FORM_ID, value: form.FORM_TEXT, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input'} }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
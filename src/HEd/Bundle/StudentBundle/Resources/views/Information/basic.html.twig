{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
{% if record_obj.getSelectedRecord.GRADE %}
<div class="group-box">
<div class="group-box-header">Enrollment</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_STATUS', db_field: 'ADVISOR_ID', db_row_id: status.STUDENT_STATUS_ID, value: status.ADVISOR_ID, label: true}) }}
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_STATUS', db_field: 'COHORT', db_row_id: status.STUDENT_STATUS_ID, value: status.COHORT, label: true}) }}
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_STATUS', db_field: 'ADMISSIONS_COUNSELOR_ID', field_name_override: 'Admissions Counselor', db_row_id: status.STUDENT_STATUS_ID, value: status.ADMISSIONS_COUNSELOR_ID, label: true}) }}
{{ kula_field({ db_table: 'STUD_STUDENT_DEGREES', db_field: 'GRADUATION_DATE', field_name_override: 'Graduation Date', db_row_id: status.STUDENT_STATUS_ID, value: status.GRADUATION_DATE, label: true}) }}
</div>
</div>
{% if status.DEGREE_ID %}
<div class="group-box">
<div class="group-box-header">Degree</div>
<div class="group-box-contents group">
{{ kula_field({ db_table: 'STUD_STUDENT_DEGREES', db_field: 'DEGREE_ID', field_name_override: 'Degree', value: status.DEGREE_ID, label: true}) }}
{{ kula_field({ db_table: 'STUD_STUDENT_DEGREES_MAJORS', db_field: 'MAJOR_ID', field_name_override: 'Major', value: status.MAJOR_ID, label: true}) }}
{{ kula_field({ db_table: 'STUD_STUDENT_DEGREES_MINORS', db_field: 'MINOR_ID', field_name_override: 'Minor', value: status.MINOR_ID, label: true}) }}
{{ kula_field({ db_table: 'STUD_STUDENT_DEGREES_CONCENTRATIONS', db_field: 'CONCENTRATION_ID', field_name_override: 'Concentration', value: status.CONCENTRATION_ID, label: true}) }}
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_DEGREES', db_field: 'EXPECTED_COMPLETION_TERM_ID', db_row_id: status.STUDENT_DEGREE_ID, value: status.EXPECTED_COMPLETION_TERM_ID, field_name_override: 'Expected Term Completed', label: true}) }}
</div>
</div>
{% endif %}
{% endif %}
<div class="data-table-header-div">
Addresses
</div>
<table id="window_window_num_data_table_addresses" class="data-table">
<thead>
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'CONS_ADDRESS', db_field: 'EFFECTIVE_DATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_ADDRESS', db_field: 'ADDRESS_TYPE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_ADDRESS', db_field: 'ADDRESS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_ADDRESS', db_field: 'CITY', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_ADDRESS', db_field: 'STATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_ADDRESS', db_field: 'ZIPCODE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'CONS_ADDRESS', db_field: 'COUNTRY', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
	{% for address in addresses %}
	<tr>
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ input: false, db_table: 'CONS_ADDRESS', db_field: 'EFFECTIVE_DATE', db_row_id: address.ADDRESS_ID, value: address.EFFECTIVE_DATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ input: false, db_table: 'CONS_ADDRESS', db_field: 'ADDRESS_TYPE', db_row_id: address.ADDRESS_ID, value: address.ADDRESS_TYPE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ input: false, db_table: 'CONS_ADDRESS', db_field: 'ADDRESS', db_row_id: address.ADDRESS_ID, value: address.ADDRESS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ input: false, db_table: 'CONS_ADDRESS', db_field: 'CITY', db_row_id: address.ADDRESS_ID, value: address.CITY, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ input: false, db_table: 'CONS_ADDRESS', db_field: 'STATE', db_row_id: address.ADDRESS_ID, value: address.STATE, lookup: 'C', prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ input: false, db_table: 'CONS_ADDRESS', db_field: 'ZIPCODE', db_row_id: address.ADDRESS_ID, value: address.ZIPCODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ input: false, db_table: 'CONS_ADDRESS', db_field: 'COUNTRY', db_row_id: address.ADDRESS_ID, value: address.COUNTRY, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input', style: 'width:150px;' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>


{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="group-box">
<div class="group-box-header">Status</div>
<div class="group-box-contents group">
{{ kula_field({ db_table: 'CORE_TERM', db_field: 'TERM_ABBREVIATION', field_name_override: 'Term', value: status.TERM_ABBREVIATION, label: true }) }}
{{ kula_field({ db_table: 'CORE_ORGANIZATION', db_field: 'ORGANIZATION_NAME', value: status.ORGANIZATION_NAME, label: true }) }}
{{ kula_field({ db_table: 'STUD_STUDENT_STATUS', db_field: 'GRADE', value: status.GRADE, label: true }) }}
{{ kula_field({ db_table: 'STUD_STUDENT_STATUS', db_field: 'RESIDENT', value: status.RESIDENT, label: true }) }}
{{ kula_field({ db_table: 'STUD_STUDENT_STATUS', db_field: 'FTE', value: status.FTE, label: true }) }}
{{ kula_field({ db_table: 'STUD_STUDENT_STATUS', db_field: 'THESIS_STATUS', value: status.THESIS_STATUS, label: true }) }}
</div>
</div>

<div class="group-box">
<div class="group-box-header">Inactivate Student</div>
<div class="group-box-contents group">
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_ENROLLMENT', db_field: 'LEAVE_DATE', db_row_id: enrollment.ENROLLMENT_ID, label: true }) }}
{{ kula_field({ edit: true, db_table: 'STUD_STUDENT_ENROLLMENT', db_field: 'LEAVE_CODE', db_row_id: enrollment.ENROLLMENT_ID, label: true }) }}
</div>
</div>

{% endblock %}
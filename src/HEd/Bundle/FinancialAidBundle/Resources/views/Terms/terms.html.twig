{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}

<div class="data-table-header-div">
Terms
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_terms', 'FAID_STUDENT_AWARD_TERMS') }}
</span>
</div>
<table id="window_window_num_data_table_terms" class="data-table">
<thead>
  <tr>
  {{ kula_field_name({ delete: true, field: 'HEd.FAID.Student.AwardYear.Term.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ field: 'HEd.FAID.Student.AwardYear.AwardYear', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.FAID.Student.AwardYear.Term.OrganizationTermID', field_name_override: 'Org / Term', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.FAID.Student.AwardYear.Term.Sequence', field_name_override: 'Sequence', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ field: 'HEd.FAID.Student.AwardYear.Term.Percentage', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  </tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, field: 'HEd.FAID.Student.AwardYear.Term.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
  {{ kula_field({ add: true, delete: true, field: 'HEd.FAID.Student.AwardYear.Award.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.FAID.Student.AwardYear.Award.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
  {{ kula_display_html({ add: true, field: 'HEd.FAID.Student.AwardYear.AwardYear', value: fin_aid_year, prepend_html: '<td>'~fin_aid_year~'</td>' }) }}
  {{ kula_field({ add: true, field: 'HEd.FAID.Student.AwardYear.Term.OrganizationTermID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.FAID.Student.AwardYear.Term.Sequence', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_field({ add: true, field: 'HEd.FAID.Student.AwardYear.Term.Percentage', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  {{ kula_display_html({ add: true, field: 'HEd.FAID.Student.AwardYear.Term.ID', prepend_html: '</tr>' }) }}
  {% for award_term in award_terms %}
  <tr>
    {{ kula_field({ delete: true, field: 'HEd.FAID.Student.AwardYear.Term.ID', db_row_id: award_term.AWARD_YEAR_TERM_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, field: 'HEd.FAID.Student.AwardYear.AwardYear', value: award_term.AWARD_YEAR, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.FAID.Student.AwardYear.Term.OrganizationTermID', db_row_id: award_term.AWARD_YEAR_TERM_ID, value: award_term.ORGANIZATION_TERM_ID, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.FAID.Student.AwardYear.Term.Sequence', db_row_id: award_term.AWARD_YEAR_TERM_ID, value: award_term.SEQUENCE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, field: 'HEd.FAID.Student.AwardYear.Term.Percentage', db_row_id: award_term.AWARD_YEAR_TERM_ID, value: award_term.PERCENTAGE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
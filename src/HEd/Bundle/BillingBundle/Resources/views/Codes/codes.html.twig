{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Codes
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_chargecodes', 'BILL_CODE') }}
</span>
</div>
<table id="window_window_num_data_table_chargecodes" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'BILL_CODE', db_field: 'CODE_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'BILL_CODE', db_field: 'CODE_TYPE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_CODE', db_field: 'CODE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_CODE', db_field: 'CODE_DESCRIPTION', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_CODE', db_field: 'INACTIVE_AFTER', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_CODE', db_field: 'CONV_CODE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'BILL_CODE', db_field: 'CODE_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'BILL_CODE', db_field: 'CODE_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'BILL_CODE', db_field: 'CODE_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'BILL_CODE', db_field: 'CODE_TYPE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_CODE', db_field: 'CODE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_CODE', db_field: 'CODE_DESCRIPTION', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_CODE', db_field: 'INACTIVE_AFTER', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_CODE', db_field: 'CONV_CODE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'BILL_CODE', db_field: 'CODE_ID', prepend_html: '</tr>' }) }}
	{% for code in codes %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'BILL_CODE', db_field: 'CODE_ID', db_row_id: code.CODE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'BILL_CODE', db_field: 'CODE_TYPE', db_row_id: code.CODE_ID, value: code.CODE_TYPE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_CODE', db_field: 'CODE', db_row_id: code.CODE_ID, value: code.CODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_CODE', db_field: 'CODE_DESCRIPTION', db_row_id: code.CODE_ID, value: code.CODE_DESCRIPTION, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_CODE', db_field: 'INACTIVE_AFTER', db_row_id: code.CODE_ID, value: code.INACTIVE_AFTER, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_CODE', db_field: 'CONV_CODE', db_row_id: code.CODE_ID, value: code.CONV_CODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
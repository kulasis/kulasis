{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Tuition Rates
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_chargecodes', 'BILL_TUITION_RATE') }}
</span>
</div>
<table id="window_window_num_data_table_chargecodes" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_NAME', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE', db_field: 'BILLING_MODE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE', db_field: 'COURSE_FEES', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE', db_field: 'CREDIT_HOUR_RATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE', db_field: 'CREDIT_HOUR_AUDIT_RATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE', db_field: 'FULL_TIME_FLAT_RATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE', db_field: 'FULL_TIME_CREDITS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE', db_field: 'MAX_FULL_TIME_CREDITS', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">Actions</th>
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'ORGANIZATION_TERM_ID', value: record_obj.getSelectedRecord.ORGANIZATION_TERM_ID, hidden: true }) }}
	{{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_NAME', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'BILLING_MODE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'COURSE_FEES', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'CREDIT_HOUR_RATE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'CREDIT_HOUR_AUDIT_RATE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'FULL_TIME_FLAT_RATE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'FULL_TIME_CREDITS', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'MAX_FULL_TIME_CREDITS', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
		{{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_ID', prepend_html: '<td class="data-table-cell-row-num">Actions</td>' }) }}
	{{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_ID', prepend_html: '</tr>' }) }}
	{% for rate in rates %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_ID', db_row_id: rate.TUITION_RATE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE', db_field: 'TUITION_RATE_NAME', db_row_id: rate.TUITION_RATE_ID, value: rate.TUITION_RATE_NAME, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE', db_field: 'BILLING_MODE', db_row_id: rate.TUITION_RATE_ID, value: rate.BILLING_MODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE', db_field: 'COURSE_FEES', db_row_id: rate.TUITION_RATE_ID, value: rate.COURSE_FEES, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE', db_field: 'CREDIT_HOUR_RATE', db_row_id: rate.TUITION_RATE_ID, value: rate.CREDIT_HOUR_RATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE', db_field: 'CREDIT_HOUR_AUDIT_RATE', db_row_id: rate.TUITION_RATE_ID, value: rate.CREDIT_HOUR_AUDIT_RATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE', db_field: 'FULL_TIME_FLAT_RATE', db_row_id: rate.TUITION_RATE_ID, value: rate.FULL_TIME_FLAT_RATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE', db_field: 'FULL_TIME_CREDITS', db_row_id: rate.TUITION_RATE_ID, value: rate.FULL_TIME_CREDITS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE', db_field: 'MAX_FULL_TIME_CREDITS', db_row_id: rate.TUITION_RATE_ID, value: rate.MAX_FULL_TIME_CREDITS, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		<td>
			<a class="normal-link"  data-record-id="{{ record_obj.getSelectedRecordID() }}" data-record-type="{{ record_obj.getRecordType() }}" href="{{ path('sis_setup_billing_tuitionrates_students', { tuition_rate_id: rate.TUITION_RATE_ID }) }}">Students</a>
		  <a class="normal-link"  data-record-id="{{ record_obj.getSelectedRecordID() }}" data-record-type="{{ record_obj.getRecordType() }}" href="{{ path('sis_setup_billing_tuitionrates_refunds', { tuition_rate_id: rate.TUITION_RATE_ID }) }}">Refunds</a>
		  <a class="normal-link"  data-record-id="{{ record_obj.getSelectedRecordID() }}" data-record-type="{{ record_obj.getRecordType() }}" href="{{ path('sis_setup_billing_tuitionrates_transactions', { tuition_rate_id: rate.TUITION_RATE_ID }) }}">Transactions</a>
		</td>
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<p>
	<a class="normal-link"  data-record-id="{{ record_obj.getSelectedRecordID() }}" data-record-type="{{ record_obj.getRecordType() }}" href="{{ path('sis_setup_billing_tuitionrates') }}">Back to Tuition Rates</a>
</p>

<div class="data-table-header-div">
Refunds
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_chargecodes', 'BILL_TUITION_RATE_REFUND') }}
</span>
</div>
<table id="window_window_num_data_table_chargecodes" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'TUITION_RATE_REFUND_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'REFUND_TYPE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'END_DATE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'REFUND_PERCENTAGE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'TUITION_RATE_REFUND_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'TUITION_RATE_REFUND_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'TUITION_RATE_ID', value: tuition_rate_id, hidden: true }) }}
	{{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'TUITION_RATE_REFUND_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'REFUND_TYPE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'END_DATE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'REFUND_PERCENTAGE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'TUITION_RATE_REFUND_ID', prepend_html: '</tr>' }) }}
	{% for refund in refunds %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'TUITION_RATE_REFUND_ID', db_row_id: grade.TUITION_RATE_REFUND_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'REFUND_TYPE', db_row_id: refund.TUITION_RATE_REFUND_ID, value: refund.REFUND_TYPE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'END_DATE', db_row_id: refund.TUITION_RATE_REFUND_ID, value: refund.END_DATE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE_REFUND', db_field: 'REFUND_PERCENTAGE', db_row_id: refund.TUITION_RATE_REFUND_ID, value: refund.REFUND_PERCENTAGE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
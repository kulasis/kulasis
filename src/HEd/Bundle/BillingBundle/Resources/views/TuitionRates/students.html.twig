{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}
<p>
	<a class="normal-link"  data-record-id="{{ record_obj.getSelectedRecordID() }}" data-record-type="{{ record_obj.getRecordType() }}" href="{{ path('sis_setup_billing_tuitionrates') }}">Back to Tuition Rates</a>
</p>

<div class="data-table-header-div">
Students
<span class="data-table-header-buttons">
	{{ kula_table_add('window_window_num_data_table_chargecodes', 'BILL_TUITION_RATE_STUDENTS') }}
</span>
</div>
<table id="window_window_num_data_table_chargecodes" class="data-table">
<thead>
	<tr>
	{{ kula_field_name({ delete: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'TUITION_RATE_STUDENT_ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	<th class="data-table-cell-row-header">#</th>
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'LEVEL', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	{{ kula_field_name({ db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'ENTER_CODE', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
	</tr>
</thead>
<tbody>
  {{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'TUITION_RATE_STUDENT_ID', prepend_html: '<tr class="data-table-row-new">' }) }}
	{{ kula_field({ add: true, delete: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'TUITION_RATE_STUDENT_ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'TUITION_RATE_ID', value: tuition_rate_id, hidden: true }) }}
	{{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'TUITION_RATE_STUDENT_ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'LEVEL', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_field({ add: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'ENTER_CODE', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
	{{ kula_display_html({ add: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'TUITION_RATE_STUDENT_ID', prepend_html: '</tr>' }) }}
	{% for student in students %}
	<tr>
		{{ kula_field({ delete: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'TUITION_RATE_STUDENT_ID', db_row_id: student.TUITION_RATE_STUDENT_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
		<td class="data-table-cell-row-num">{{ loop.index }}</td>
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'LEVEL', db_row_id: student.TUITION_RATE_STUDENT_ID, value: student.LEVEL, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
		{{ kula_field({ edit: true, db_table: 'BILL_TUITION_RATE_STUDENTS', db_field: 'ENTER_CODE', db_row_id: student.TUITION_RATE_STUDENT_ID, value: student.ENTER_CODE, prepend_html: '<td>', append_html: '</td>', attributes_html: { class : 'data-table-cell-input' } }) }}
	</tr>
	{% endfor %}
</tbody>
</table>
{% endblock %}
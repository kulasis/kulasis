{% extends 'KulaCoreFrameworkBundle::sis.html.twig' %}

{% block content %}
<div class="data-table-header-div">
Section Fees
<span class="data-table-header-buttons">
  {{ kula_table_add('window_window_num_data_table_rooms', 'STUD_ROOM', { school_term_only: true }) }}
</span>
</div>
<table id="window_window_num_data_table_rooms" class="data-table">
<thead>
  {{ kula_field_name({ delete: true, school_term_only: true, field: 'HEd.Billing.SectionFee.ID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  <th class="data-table-cell-row-header">#</th>
  {{ kula_field_name({ edit: true, field: 'HEd.Billing.SectionFee.CodeID', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
  {{ kula_field_name({ edit: true, field: 'HEd.Billing.SectionFee.Amount', prepend_html: '<th class="data-table-cell-row-header">', append_html: '</th>' }) }}
</thead>
<tbody>
    {{ kula_display_html({ add: true, field: 'HEd.Billing.SectionFee.ID', prepend_html: '<tr class="data-table-row-new">' }) }}
    {{ kula_field({ add: true, field: 'HEd.Billing.SectionFee.SectionID', value: kula_core_record.getSelectedRecord.SECTION_ID, hidden: true }) }}
    {{ kula_field({ add: true, delete: true, field: 'HEd.Billing.SectionFee.ID', prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    {{ kula_display_html({ add: true, field: 'HEd.Billing.SectionFee.ID', prepend_html: '<td class="data-table-cell-row-num">#</td>' }) }}
    {{ kula_field({ add: true, field: 'HEd.Billing.SectionFee.CodeID', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ add: true, field: 'HEd.Billing.SectionFee.Amount', prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_display_html({ add: true, field: 'HEd.Billing.SectionFee.ID', prepend_html: '</tr>' }) }}
  {% for fee in fees %}
  <tr>
    {{ kula_field({ delete: true, school_term_only: true, field: 'HEd.Billing.SectionFee.ID', db_row_id: fee.SECTION_FEE_ID, prepend_html: '<td class="data-table-cell-row-delete">', append_html: '</td>' }) }}
    <td class="data-table-cell-row-num">{{ loop.index }}</td>
    {{ kula_field({ edit: true, school_term_only: true, field: 'HEd.Billing.SectionFee.CodeID', db_row_id: fee.SECTION_FEE_ID, value: fee.CODE_ID, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
    {{ kula_field({ edit: true, school_term_only: true, field: 'HEd.Billing.SectionFee.Amount', db_row_id: fee.SECTION_FEE_ID, value: fee.AMOUNT, prepend_html: '<td>', append_html: '</td>', attributes_html : { class : 'data-table-cell-input' } }) }}
  </tr>
  {% endfor %}
</tbody>
</table>
{% endblock %}
{% extends 'KulaFrameworkBundle::sis.html.twig' %}

{% block content %}

<div class="group-box">
<div class="group-box-header">Term</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, db_table: 'BILL_CONSTITUENT_TRANSACTIONS', field_name_override: 'Org / Term', db_field: 'ORGANIZATION_TERM_ID', value: record_obj.getSelectedRecord.ORGANIZATION_TERM_ID, label: true }) }}
</div>
</div>
<div class="group-box">
<div class="group-box-header">Transaction</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, db_table: 'BILL_CONSTITUENT_TRANSACTIONS', db_field: 'CODE_ID', field_name_override: 'Code', CODE_TYPE: code_type, label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, db_table: 'BILL_CONSTITUENT_TRANSACTIONS', db_field: 'TRANSACTION_DATE', value:"now"|date("m/d/Y"), label: true }) }}
{{ kula_field({ add: true, db_table: 'BILL_CONSTITUENT_TRANSACTIONS', db_field: 'TRANSACTION_DESCRIPTION', label: true }) }}
</div>
<div class="group-box-contents group">
{{ kula_field({ add: true, db_table: 'BILL_CONSTITUENT_TRANSACTIONS', db_field: 'AMOUNT', label: true }) }}
</div>
</div>
{% endblock %}